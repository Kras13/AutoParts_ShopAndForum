@using AutoParts_ShopAndForum.Models.Checkout
@model CheckoutSuccessModel

<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h2 class="mt-3">Благодарим, че избрахте нас!</h2>
        <p>Вашата поръчка с код  <strong>#@Model.OrderId</strong> беше успешно създадена.</p>
        <p>Изпратихме известително писмо до <strong>@Model.UserEmailAddress</strong>.</p>

        <div class="mt-4">
            <a href="/Identity/Account/Manage/OrderDetails/@(Model.OrderId)" class="btn btn-primary">Вижте поръчката</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Продължете да пазарувате</a>
        </div>
    </div>
</div>
