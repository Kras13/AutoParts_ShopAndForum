@using AutoParts_ShopAndForum.Areas.Forum.Models

@model PostInputModel

@{
    ViewData["Title"] = "Създаване на форумна публикация";
}

<div class="text-center">
    <h1>
        @this.ViewData["Title"]
    </h1>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });</script>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" id="Title" class="form-control" placeholder="Заглавие на публикация...">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" id="Content" class="form-control" rows="6" placeholder="Съдържание на публикация..."></textarea>
        <span asp-validation-for="Content" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedCategoryId"></label>
        <select asp-for="SelectedCategoryId" class="form-control">
            @foreach (var subCategory in Model.Categories)
            {
                <option value="@subCategory.Id">@subCategory.Name</option>
            }
        </select>
    </div>

    <input class="btn btn-primary" type="submit" value="Запази" style="margin-top:10px;"/>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}