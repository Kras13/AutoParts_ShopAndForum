@page
@model OrdersModel
@{
    ViewData["Title"] = "Your Orders";
    ViewData["ActivePage"] = ManageNavPages.Orders;
}

<h4>Вашите поръчки</h4>
<hr />

@if (Model.OrderPagedModel.Orders?.Any() == true)
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var order in Model.OrderPagedModel.Orders)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Поръчка #@order.Id</h5>
                        <p class="card-text">
                            <strong>Улица:</strong> @order.DeliveryStreet<br />
                            <strong>Град:</strong> @order.Town
                        </p>
                    </div>
                    <div class="card-footer text-end bg-white border-0">
                        <a asp-page="./OrderDetails" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                            Детайли
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col text-end">
            <nav aria-label="Order pagination">
                <ul class="pagination justify-content-end">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="./Orders" asp-route-CurrentPage="@(Model.CurrentPage - 1)">Назад</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./Orders" asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="./Orders" asp-route-CurrentPage="@(Model.CurrentPage + 1)">Напред</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

}
else
{
    <div class="alert alert-info">Все още нямате поръчки.</div>
}
